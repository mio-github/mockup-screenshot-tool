{
  "projectName": "プロジェクト名",
  "subtitle": "サブタイトル",
  "client": "クライアント企業名",
  "vendor": "ベンダー企業名",
  "baseUrl": "http://localhost:3000",
  "outputDir": "./mockup-output",
  "screenshotsDir": "./mockup-output/screenshots",
  "annotatedDir": "./mockup-output/screenshots-annotated",
  "pdfFileName": "画面一覧.pdf",
  "viewport": {
    "width": 1440,
    "height": 900
  },
  "pages": [
    {
      "path": "/",
      "name": "01_ホーム",
      "waitStrategy": "basic"
    },
    {
      "path": "/dashboard",
      "name": "02_ダッシュボード",
      "waitStrategy": "graph"
    },
    {
      "path": "/form",
      "name": "03_フォーム入力例",
      "waitStrategy": "basic",
      "actions": [
        {
          "type": "click",
          "selector": "button.menu-toggle",
          "description": "メニューを開く"
        },
        {
          "type": "type",
          "selector": "input[name='username']",
          "value": "test_user",
          "description": "ユーザー名を入力"
        },
        {
          "type": "select",
          "selector": "select[name='category']",
          "value": "option1",
          "description": "カテゴリを選択"
        },
        {
          "type": "wait",
          "duration": 1000,
          "description": "1秒待機"
        },
        {
          "type": "click",
          "selector": "button.submit",
          "description": "送信ボタンをクリック",
          "waitAfter": 2000
        }
      ]
    },
    {
      "path": "/long-page",
      "name": "04_スクロール例",
      "waitStrategy": "basic",
      "actions": [
        {
          "type": "scroll",
          "x": 0,
          "y": 500,
          "description": "下にスクロール",
          "waitAfter": 500
        },
        {
          "type": "waitForSelector",
          "selector": ".content-section",
          "description": "コンテンツセクションの表示を待つ"
        }
      ]
    }
  ],
  "annotations": {
    "01_ホーム": {
      "items": [
        {
          "x": 960,
          "y": 400,
          "text": "メイン機能",
          "description": "機能の説明を\n複数行で記述可能",
          "direction": "top"
        }
      ]
    },
    "02_ダッシュボード": {
      "items": [
        {
          "x": 400,
          "y": 300,
          "text": "KPI表示",
          "description": "主要指標を表示",
          "direction": "left"
        },
        {
          "x": 1500,
          "y": 300,
          "text": "グラフエリア",
          "description": "データを可視化",
          "direction": "right"
        }
      ]
    }
  },
  "screens": [
    {
      "filename": "01_ホーム",
      "title": "ホーム画面",
      "category": "共通",
      "description": "システムのホーム画面です。主要な機能にアクセスできます。"
    },
    {
      "filename": "02_ダッシュボード",
      "title": "ダッシュボード",
      "category": "管理",
      "description": "システム全体の状況を一目で確認できるダッシュボード画面です。"
    }
  ],
  "pdfOptions": {
    "format": "A4",
    "landscape": true,
    "printBackground": true,
    "layout": "single"
  },
  "overview": {
    "enabled": true,
    "title": "システム概要",
    "sections": [
      {
        "heading": "このシステムで実現できること",
        "content": "システムの主な機能や目的を記述します。"
